<idea-plugin url="https://www.jetbrains.com/idea">
    <id>org.vjapps.rsp.parser</id>
    <name>Android String Parser</name>
    <version>1.0.2</version>
    <vendor email="mablevj@gmail.com" url="https://github.com/mablejohn/Android-String-Parser.git">VJ-Apps</vendor>

    <description><![CDATA[
        <h1>A small plugin, which helps to automate the review process of "Android Strings" file</h1>
        <br/><a href="https://github.com/Haehnchen/idea-android-studio-plugin/issues">Issues</a><br/>
        <h2>Features</h2>
        <ul>
            <li>Export the android Strings file to excel format.</li>
            <li>Import the reviewed/translated file back to .XML format</li>
        </ul>
        ]]>
    </description>
    <change-notes>
        <![CDATA[
        <h2>1.0.0</h2>
        <ul>
            <li>Export the android Strings file to excel format.</li>
            <li>Import the reviewed/translated file back to .XML format</li>
        </ul>
        <h2>1.0.1</h2>
        <ul>
            <li>Plugin is compatible with Android Studio</li>
            <li>UI issue fix</li>
        </ul>
        <h2>1.0.2</h2>
         <ul>
            <li>UI changes and Bug fix</li>
        </ul>
         ]]>
    </change-notes>

    <!-- Android Studio 3.3+ -->
    <!-- see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
    <idea-version since-build="183"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.rsp.parser.plugin.ArsParserSettings"/>
    </extensions>

    <actions>
        <group id="comVjPlugin.SampleMenu" text="Android Strings Parser" description="Android string parser">
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <group id="comVjPlugin.ARSGroup" text="Android Strings Parser" description="Android string parser"
                   popup="true">

                <action id="comVjPlugin.ActionExport" class="org.rsp.parser.action.ActionExport" text="Export Resource"
                        description="Import Strings from files">
                    <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl A"
                                       second-keystroke="shift ctrl E"/>
                </action>

                <action id="comVjPlugin.ActionImport" class="org.rsp.parser.action.ActionImport" text="Import Resource"
                        description="Help topics">
                    <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl A"
                                       second-keystroke="shift ctrl I"/>
                </action>
            </group>
        </group>
    </actions>
</idea-plugin>